@model List<ffxivList.Models.Craft>

@{
    ViewData["Title"] = "Crafts";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Level
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CraftName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CraftLevel)
            </td>
        </tr>}
    </tbody>
</table>
