@model ffxivList.Models.ModelContainer

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form asp-action="Index">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Level
                    </th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Craft.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Craft[i].CraftName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Craft[i].CraftLevel)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@Model.Craft[i].CraftID">Details</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox">
                                            <input type="hidden" asp-for="@Model.UserCraft.FirstOrDefault(l => l.CraftID == Model.Craft[i].CraftID).UserCraftID" />
                                            <input id="1" asp-for="@Model.UserCraft.FirstOrDefault(l => l.CraftID == Model.Craft[i].CraftID).IsComplete" />
                                            <input id="1" type="submit" value="Save" class="btn btn-default" />
                                        </div>
                                    </div>
                                </div>
                                @*<label>
                                        <input asp-for="@Model.UserCraft.FirstOrDefault(l => l.CraftID == Model.Craft[i].CraftID).IsComplete" type="checkbox" value="" />
                                    </label>*@
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

