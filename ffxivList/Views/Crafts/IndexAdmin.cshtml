@model List<ffxivList.Models.Craft>

@{
    ViewData["Title"] = "Crafts Admin";
}
<br />
<h2>@ViewData["Title"]</h2>
@if (ViewData["Alert"] != null)
{
    <div class="alert alert-danger" role="alert"> @ViewData["Alert"]</div>
}
<p>
    <a asp-action="Create" class="btn btn-primary" role="button">Create</a>
</p>
<table class="table table-striped table-hover" >
    <thead>
    <tr>
        <th>Name</th>
        <th>Level</th>
    </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CraftName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CraftLevel)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="...">
                        <a asp-action="Edit" asp-route-id="@item.CraftId" class="btn btn-success" role="button">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.CraftId" class="btn btn-warning" role="button">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.CraftId" class="btn btn-danger" role="button">Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
