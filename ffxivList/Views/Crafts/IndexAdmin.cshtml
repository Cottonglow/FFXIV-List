@model ffxivList.Models.ModelContainer

@{
    ViewData["Title"] = "Index Admin";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Level
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Craft)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CraftName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CraftLevel)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => Model.UserCraft.FirstOrDefault(l => l.CraftID == item.CraftID).IsComplete)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CraftID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CraftID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CraftID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
