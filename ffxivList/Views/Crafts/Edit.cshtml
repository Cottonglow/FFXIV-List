@model ffxivList.Models.Craft

@{
    ViewData["Title"] = "Edit Craft";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="CraftId" />
        <div class="form-group">
            <label asp-for="CraftName" class="col-md-2 control-label">Name</label>
            <div class="col-md-10">
                <input asp-for="CraftName" class="form-control" />
                <span asp-validation-for="CraftName" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="CraftLevel" class="col-md-2 control-label">Level</label>
            <div class="col-md-10">
                <input asp-for="CraftLevel" class="form-control" type="number" min="1" max="60" />
                <span asp-validation-for="CraftLevel" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div class="btn-group" role="group" aria-label="...">
    <a asp-action="IndexAdmin" class="btn btn-link" role="button">Back to List</a>
    <a asp-action="Details" asp-route-id="@Model.CraftId" class="btn btn-warning" role="button">Details</a>
    <a asp-action="Delete" asp-route-id="@Model.CraftId" class="btn btn-danger" role="button">Delete</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
