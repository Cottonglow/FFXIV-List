@model ffxivList.Models.Craft

@{
    ViewData["Title"] = "Craft Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CraftName)
        </dd>
        <dt>
            Level
        </dt>
