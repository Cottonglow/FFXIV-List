@model List<ffxivList.Models.Levemete>

@{
    ViewData["Title"] = "Levemetes Admin";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <td><h4>Name</h4></td>
            <td><h4>Level</h4></td>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LevemeteName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LevemeteLevel)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.LevemeteID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.LevemeteID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.LevemeteID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
