@{
    ViewData["Title"] = "Home Page";
}

<div id="MainCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
        <ol class="carousel-indicators">
            <li data-target="#MainCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#MainCarousel" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/LevemeteBanner.png" alt="Levemete Progress" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Login or Signup to track your Levemete progress today for Final Fantasy XIV!
                        <br/>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-default" asp-controller="AllUserLevemetes" asp-action="Index">
                                Go to Levemetes
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-default" asp-controller="Account" asp-action="Login">
                                Login or Register
                            </a>
                        }
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/QuestBanner.png" alt="Quest Progress" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Login or Signup to track your Quest progress today for Final Fantasy XIV!
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-default" asp-controller="AllUserQuests" asp-action="Index">
                                Go to Quests
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-default" asp-controller="Account" asp-action="Login">
                                Login or Register
                            </a>
                        }
                    </p>
                </div>
            </div>            
            <div class="item">
                <img src="~/images/CraftBanner.png" alt="Craft Progress" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Login or Signup to track your Craft progress today for Final Fantasy XIV!
                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-default" asp-controller="AllUserCrafts" asp-action="Index">
                                Go to Crafts
                            </a>
                        }
                        else
                        {
                            <a class="btn btn-default" asp-controller="Account" asp-action="Login">
                                Login or Register
                            </a>
                        }
                    </p>
                </div>
            </div>  
            <a class="left carousel-control" href="#MainCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#MainCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    
<div class="row">
    <div class="col-md-4">
        <h2>Overview</h2>
        <p>Use FFXIVList to start tracking your in game progress.</p>
        <p>Don't know how much you have done in the game? How much is left to go? Or just curious what your progress looks like in a percentage?
            Register and start checking those boxes!</p>
    </div>
        <div class="col-md-4">
            <h2>How to start</h2>
            <ul>
                <li>Register with your email and user name. (You can use your user name to login.)</li>
                <li>Head on over to your desired tracking tab in the navigation bar.</li>
                <li>Check the rows you have completed.</li>
                <li>Click the save button and watch your progress bar go up!</li>
                <li>Have a look at your user profile to see all your progress on one page.</li>
            </ul>
        </div>
    <div class="col-md-4">
        @if (User.Identity.IsAuthenticated)
        {
            <h2>Track</h2>
            <ul>
                <li><a asp-controller="AllUserLevemetes" asp-action="Index">Levemetes</a></li>
                <li><a asp-controller="AllUserQuests" asp-action="Index">Quests</a></li>
                <li><a asp-controller="AllUserCrafts" asp-action="Index">Crafts</a></li>
            </ul>
        }
        else
        {
            <h2>Check out what you can track</h2>
            <ul>
                <li><a asp-controller="Levemetes" asp-action="Index">Levemetes</a></li>
                <li><a asp-controller="Quests" asp-action="Index">Quests</a></li>
                <li><a asp-controller="Crafts" asp-action="Index">Crafts</a></li>
            </ul>
        }
    </div>
    </div>
    </div>