@model LockContext

<div id="root" style="width: 320px; margin: 40px auto; padding: 10px; border-style: dashed; border-width: 1px;">
    embeded area
</div>
<script src="https://cdn.auth0.com/js/lock/10.11/lock.min.js"></script>
<script>
    var options = {
        languageDictionary: {
            emailInputPlaceholder: "Email",
            passwordInputPlaceholder: "Password",
            title: ""
        },
        socialButtonStyle: 'small',
        //domain: 'cottonglow.eu.auth0.com',
        //callbackurl: 'http://localhost:50258/signin-auth0',
        //clientid: 'UyAKTB5gteDVhvEp4oq1t0zg1PrhsRlF',
        //clientSecret: 'C_iMbfn9hVp7Ttc_agrPDatYFn_PJzm-Kqa2Fqabr8FaTbG0G7D3uHQc2jXzl2U8',
        container: 'root',
        auth: {
            redirectUrl: '@Model.CallbackUrl',
            responseType: 'code',
            params: {
                scope: 'openid',
                state: '@Model.State' ,
                nonce: '@Model.Nonce'
            }
        }
    };

    var lock = new Auth0Lock('@Model.ClientId', '@Model.Domain', options);

  lock.show();
</script>