@model ffxivList.Models.SignUp

@{
    ViewData["Title"] = "Sign Up";
}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <section>
            <form asp-controller="Account" asp-action="SignUp" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
                <h4>@ViewData["Title"]</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="EmailAddress" type="email" id="signup-email" placeholder="Email" required />
                </div>
                <div class="form-group">
                    <input asp-for="Password" type="password" id="signup-password" placeholder="Password" required/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Sign up" />
                </div>
            </form>
        </section>
    </div>
</div>