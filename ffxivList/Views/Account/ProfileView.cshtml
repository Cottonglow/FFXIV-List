@model  ffxivList.Models.UserProfile

<div class="row">
    <div class="col-md-12">
        <div class="row">
            <h2>@Model.ProfileName Profile</h2>
            <hr/>
            <div class="col-md-2">
                <img src="@Model.ProfileImage"
                     alt="" class="img-rounded img-responsive" />
            </div>
            <div class="col-md-4">
                <p>
                    <i class="glyphicon glyphicon-envelope"></i> @Model.ProfileEmail
                </p>
                <p>
                    <i class="glyphicon glyphicon-pawn"></i> @Model.ProfileRole
                </p>
                <p>
                    Levemetes Completed: @Model.LevemetesCompleted/@Model.LevemetesTotal
                </p>
                <p>
                    Crafts Completed: @Model.CraftsCompleted/@Model.CraftsTotal
                </p>
                <p>
                    Quests Completed: @Model.QuestsCompleted/@Model.QuestsTotal
                </p>
            </div>
        </div>
    </div>
</div>