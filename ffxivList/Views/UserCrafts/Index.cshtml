@model ffxivList.Models.ModelContainer

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<form asp-action="Index">
    <div class="form-horizontal">
        <h4>UserCraft</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>        
        <table class="table">
            <thead>
                @*<tr>
                            <th>
                                @Html.DisplayNameFor(model => model.CraftID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UserID)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsComplete)
                            </th>
                        <th></th>
                    </tr>*@
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Craft.Count(); i++)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Craft[i].CraftName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.Craft[i].CraftLevel)
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@Model.Craft[i].CraftID">Details</a>
                        </td>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <td>
                                <div class="col-md-10">
                                    <input asp-for="@Model.UserCraft.FirstOrDefault(l => l.CraftID == Model.Craft[i].CraftID).CraftID" class="form-control" />
                                    <span asp-validation-for="@Model.UserCraft.FirstOrDefault(l => l.CraftID == Model.Craft[i].CraftID).CraftID" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="checkbox">
                                            <input asp-for="@Model.UserCraft.FirstOrDefault(l => l.CraftID == Model.Craft[i].CraftID).IsComplete" />
                                            <label asp-for="@Model.UserCraft.FirstOrDefault(l => l.CraftID == Model.Craft[i].CraftID).IsComplete"></label>
                                        </div>
                                    </div>
                                </div>
</td>
                        }
                    </tr>
                }
            </tbody>
        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
