@model ffxivList.Models.User

@{
    ViewData["Title"] = "Edit User";
}
<br />
<h2>@ViewData["Title"]</h2>

<form asp-action="Edit">
    <hr/>
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="UserId"/>
        <input type="hidden" asp-for="UserName"/>
        <div class="form-group">
            <label asp-for="UserRole" class="col-md-2 control-label">Role</label>
            <select class="form-control" asp-for="UserRole">
                <option>Admin</option>
                <option>User</option>
            </select>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
</form>

<div class="btn-group" role="group" aria-label="...">
    <a asp-action="Index" class="btn btn-link" role="button">Back to List</a>   
    <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-warning" role="button">Details</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
