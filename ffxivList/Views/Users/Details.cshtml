@model ffxivList.Models.User

@{
    ViewData["Title"] = "User Details";
}

<h2>@ViewData["Title"]</h2>

<div>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt>
            Role
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserRole)
        </dd>
        <dt>
            Levemetes Completed
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserLevemetesCompleted)
        </dd>
        <dt>
            Crafts Completed
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserCraftsCompleted)
        </dd>
        <dt>
            Quests Completed
        </dt>
        <dd>
            @Html.DisplayFor(model => model.UserQuestsCompleted)
        </dd>
