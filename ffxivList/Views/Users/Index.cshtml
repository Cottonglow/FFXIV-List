@using System.Security.Claims
@model IEnumerable<ffxivList.Models.User>

@{
    ViewData["Title"] = "Users Admin";
}
<br />
<h2>@ViewData["Title"]</h2>
<br/>
<table class="table table-striped table-hover">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Role</th>
        <th class="text-center">Levemetes Complete</th>
        <th class="text-center">Crafts Complete</th>
        <th class="text-center">Quests Complete</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email).Value
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserRole)
            </td>
            <td class="text-center">
                @Html.DisplayFor(model => item.UserLevemetesCompleted)
            </td>
            <td class="text-center">
                @Html.DisplayFor(model => item.UserCraftsCompleted)
            </td>
            <td class="text-center">
                @Html.DisplayFor(model => item.UserQuestsCompleted)
            </td>
            <td>
                <div class="btn-group" role="group" aria-label="...">
                    <a asp-action="Edit" asp-route-id="@item.UserId" class="btn btn-success" role="button" >Edit</a>
                    <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-warning" role="button">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.UserId" class="btn btn-danger" role="button" >Delete</a>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>