@using System.Security.Claims
@model ffxivList.Models.User

@{
    ViewData["Title"] = "Delete User";
}
<br />
<h2>@ViewData["Title"]</h2>

<div class="alert alert-danger" role="alert">Are you sure you want to delete this user?</div>

<div>
    <hr />
    <dl class="dl-horizontal">
        <input type="hidden" asp-for="UserId" />
        <dt>Name</dt>
        <dd>@Html.DisplayFor(model => model.UserName)</dd>
        <dt>Email</dt>
        <dd>@User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Email).Value</dd>
        <dt>Role</dt>
        <dd>@Html.DisplayFor(model => model.UserRole)</dd>
        <dt>Levemetes Completed</dt>
        <dd>@Html.DisplayFor(model => model.UserLevemetesCompleted)</dd>
        <dt>Crafts Completed</dt>
        <dd>@Html.DisplayFor(model => model.UserCraftsCompleted)</dd>
        <dt>Quests Completed</dt>
        <dd>@Html.DisplayFor(model => model.UserQuestsCompleted)</dd>
    </dl>
    
    <form asp-action="Delete">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>
</div>
<br />
<br />
<br />
<div class="btn-group" role="group" aria-label="...">
    <a asp-action="Index" class="btn btn-link" role="button">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.UserId" class="btn btn-success" role="button">Edit</a>
    <a asp-action="Details" asp-route-id="@Model.UserId" class="btn btn-warning" role="button">Details</a>
</div>
